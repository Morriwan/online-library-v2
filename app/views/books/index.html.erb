<h1>Coucou</h1>
<% if @books.any?%>
  <ul>
    <% @books.each do |book| %>
      <li><p>Titre de l'oeuvre :</p>
        <%= book.name %></li>
      <li><p>Année de publication :</p>
        <%= book.year %></li>
      <li><p>Nom de l'auteur :</p>
        <%= book.author.first_name %>
        <%= book.author.last_name %>
        </li>
      <li><p>Genre de l'oeuvre :</p>
        <%= book.genre.name %></li>
      <li><p>Catégorie :</p>
        <%= book.category.name %></li>
      <li><p>Numéro ISBN :</p>
      <%= book.isbn %></li>
    <% end %>
  </ul>
<% end %>

<h1>Ajouter un livre à la bibliothèque</h1>
<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Renseigner l'ISBN du livre recherché" %>
  <%= form.text_field :query %>
  <%= form.submit "Chercher" %>
<% end %>
